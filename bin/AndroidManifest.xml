<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fcsit.leazy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
    
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name="com.fcsit.leazy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fcsit.leazy.SignUpFragment"
            android:parentActivityName="com.fcsit.leazy.HomeFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fcsit.leazy.HomeActivity" />
        </activity>
        <activity
            android:name="com.fcsit.leazy.SelectActivity"
            android:parentActivityName="com.fcsit.leazy.HomeFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fcsit.leazy.HomeActivity" />
        </activity>
    </application>

</manifest>